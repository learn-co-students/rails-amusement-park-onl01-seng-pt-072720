<% if !session[:admin] %>
    <% @attractions.each do |attraction| %>
        <p><%= attraction.name %>: <%= attraction.tickets %> ticket(s) :  <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %></p>
    <% end %>
<% else %>
    <% @attractions.each do |attraction| %>
        <p><%= attraction.name %>: <%= link_to "Show #{attraction.name}", attraction_path(attraction) %></p>
    <% end %>
    <%= link_to "New Attraction", new_attraction_path %>
<% end %>

