<%= form_tag('/signin', method: :post) do %>

    <div class="form-group">
        <%= label_tag(:name, "Your name:") %>
        <br>
        <%= collection_select(:user, :name, User.all, :name, :name, prompt: "Select name") %>
        <br>
        <%= label_tag(:password, "Your Password:") %>
        <%= password_field_tag(:password, nil, class: "form-control") %>
        <br>
        <br>        
        <%= label_tag(:user_password, "Your Password:") %>
        <%= password_field_tag(:user_password, nil, class: "form-control") %>
    </div>

    <div class="actions">
        <%= submit_tag("Sign In")%>
    </div>
<% end %>
    