<%= form_for @user do |f| %>

    <div>
        <%= f.label :name %>
        <br>
        <%= f.text_field :name %>
        <br> 
        <br>
        <%= f.label :nausea, "How nauseous are you? (1-5)" %>
        <br>
        <%= f.number_field :nausea %>
        <br>
        <br>
        <%= f.label :happiness, "How happy are you? (1-5)" %>
        <br>
        <%= f.number_field :happiness %>
        <br>
        <br>
        <%= f.label :tickets, "How many tickets you want?" %>
        <br>
        <%= f.number_field :tickets %>
        <br>
        <br>
        <%= f.label :height, "How tall are you? (inches)" %>
        <br>
        <%= f.number_field :height %>
        <br>
        <br>
        <%= f.label :password %>
        <br>
        <%= f.password_field :password %>
        <br>
        <br>
        <%= f.label :admin, "Check box if you are the theme park owner" %>
        <br>
        <%= f.check_box :admin %>
    </div>
    <br>
    <br>
    <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
    </div>
<% end %>

