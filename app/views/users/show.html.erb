
<% if flash[:message] %>
    <div class="center alert">
        <p><%=flash[:message] %></p>
    </div>
<% end %>

<div class="info">
    <% if @user.admin %>
        <p>ADMIN</p>
    <% end %>

    <p>Name: <%= @user.name %></p>
    <p>:Tickets <%= @user.tickets %></p>
    <p>:Mood <%= @user.mood %></p>
    <p>:Height <%= @user.height %></p>

    <p><%=link_to 'See attractions', attractions_path %></p>
    <p><%=link_to 'Log Out', logout_path %> </p>
</div>